<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/FragDashVPTop_iv_Left"
        android:layout_width="370dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:background="@drawable/grad_bkg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/FragDashVPTop_iv_Right"
        android:layout_width="213dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:layout_marginEnd="168dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/layer" />

    <TextView
        android:id="@+id/DashVPTopFrag_tv_VPHead"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="148dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Title Get Set And Go!"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/material_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DashVPTopFrag_tv_VPSubHead"
        android:layout_width="205dp"
        android:layout_height="62dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/josefin_sans"
        android:text="This is an important update description or sponsor detail or news!"
        android:textColor="#fff"
        android:textSize="@dimen/material_text_subhead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DashVPTopFrag_tv_VPHead" />


</android.support.constraint.ConstraintLayout>
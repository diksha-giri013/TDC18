<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="369dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.235"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fdrc_card_iv_boxPrimary"
            android:layout_width="60dp"
            android:layout_height="150dp"
            android:layout_marginStart="4dp"
            android:background="@color/colorAccent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fdrv_card_iv_boxSecondary"
            android:layout_width="13dp"
            android:layout_height="150dp"
            android:background="@color/colorAccentDark"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fdrv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="PRESENTATION SKILLS 101"
            android:textColor="@color/colorHeading"
            android:textSize="18sp"
            card_view:layout_constraintStart_toEndOf="@+id/fdrc_card_iv_boxPrimary"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fdrv_card_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="WORKSHOP"
            android:textColor="@color/colorAccentDark"
            android:textSize="8sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/fdrc_card_iv_boxPrimary"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fdrv_card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="8dp"
            android:capitalize="words"
            android:fontFamily="@font/josefin_sans"
            android:text="This Is A Subtitle. Beauty"
            android:textAllCaps="false"
            android:textColor="@color/colorSubHeading"
            android:textSize="@dimen/material_text_subhead"
            card_view:layout_constraintStart_toEndOf="@+id/fdrc_card_iv_boxPrimary"
            card_view:layout_constraintTop_toBottomOf="@+id/fdrv_card_title" />

        <TextView
            android:id="@+id/fdrv_card_para"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/josefin_sans"
            android:text="This is beautiful description text for testing and making stuff great"
            android:textColor="@color/colorParagraph"
            android:textSize="@dimen/material_text_body1"
            card_view:layout_constraintStart_toEndOf="@+id/fdrc_card_iv_boxPrimary"
            card_view:layout_constraintTop_toBottomOf="@+id/fdrv_card_title" />

        <ImageView
            android:id="@+id/fdrv_card_iv_divider"
            android:layout_width="350dp"
            android:layout_height="0.35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="68dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/fdrv_card_title"
            card_view:srcCompat="@drawable/workshop_themecolor1" />

        <TextView
            android:id="@+id/fdrv_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:text="DATE: 30/12/2017"
            android:textColor="@color/colorSingleLineText"
            card_view:layout_constraintStart_toStartOf="@+id/fdrv_card_para"
            card_view:layout_constraintTop_toBottomOf="@+id/fdrv_card_title" />

        <TextView
            android:id="@+id/fdrv_card_venue"
            android:layout_width="107dp"
            android:layout_height="17dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="76dp"
            android:text="VENUE: Hall Duh!"
            android:textColor="@color/colorSingleLineText"
            card_view:layout_constraintStart_toEndOf="@+id/fdrc_card_iv_boxPrimary"
            card_view:layout_constraintTop_toBottomOf="@+id/fdrv_card_title" />

        <TextView
            android:id="@+id/fdrc_card_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:visibility="invisible"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>